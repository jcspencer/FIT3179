{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "data/area_by_date_cause.json"
    },
    "title": "Fire Burnt Area by Category",
    "transform": [
        {
            "filter": {
                "timeUnit": "year",
                "field": "Year",
                "lt": "2000"
            }
        }
    ],
    "vconcat": [
        {
            "height": 400,
            "width": "container",
            "mark": "area",
            "transform": [
                {
                    "filter": {
                        "param": "cause"
                    }
                }
            ],
            "encoding": {
                "x": {
                    "timeUnit": "yearmonth",
                    "field": "Date",
                    "type": "temporal",
                    "axis": {
                        "domain": false,
                        "format": "%b %Y",
                        "tickSize": 0
                    },
                    "scale": {
                        "domain": {
                            "param": "brush"
                        }
                    }
                },
                "y": {
                    "aggregate": "sum",
                    "field": "Area",
                    "title": "Area (km2)"
                },
                "color": {
                    "field": "d_Cause",
                    "scale": {
                        "scheme": "tableau20"
                    },
                    "title": "Cause of Fire"
                },
                "opacity": {
                    "condition": {
                        "param": "cause",
                        "value": 1
                    },
                    "value": 0.2
                },

                "tooltip": [
                    {
                        "field": "d_Cause",
                        "type": "nominal",
                        "title": "Cause"
                    },
                    {
                        "field": "Area",
                        "type": "nominal",
                        "title": "Area",
                        "format": ".2s"
                    },
                    {
                        "field": "Date",
                        "type": "temporal",
                        "title": "Date",
                        "timeUnit": "yearmonth"
                    }
                ]
            },
            "params": [
                {
                    "name": "cause",
                    "select": {
                        "type": "point",
                        "fields": [
                            "d_Cause"
                        ]
                    },
                    "bind": "legend"
                }
            ]
        },
        {
            "height": 100,
            "width": "container",
            "mark": "area",
            "encoding": {
                "x": {
                    "timeUnit": "yearmonth",
                    "field": "Date",
                    "type": "temporal",
                    "axis": {
                        "domain": false,
                        "format": "%Y",
                        "tickSize": 0,
                        "title": null
                    }
                },
                "y": {
                    "aggregate": "sum",
                    "field": "Area",
                    "axis": null
                },
                "color": {
                    "field": "d_Cause",
                    "scale": {
                        "domain": [
                          "Accidental",
                          "Escaped Hazard Reduction",
                          "Undetermined",
                          "Escaped Pile Burn",
                          "Juvenile (fire play)",
                          "Debris Burning",
                          "Equipment Use",
                          "Lightning",
                          "Incendiary",
                          "Escaped Permit",
                          "Miscellaneous/Other",
                          "Rail",
                          "Arson",
                          "Electrical",
                          "Campfire",
                          "Natural",
                          "Smoking",
                          "Suspicious",
                          "Machinery/Slasher",
                          "Burning Off - Illegal",
                          "Motor Vehicle",
                          "Power Line",
                          "Burning Off - Legal",
                          "No Fire"
                        ],
                        "range": [
                          "#4c78a8",
                          "#9ecae9",
                          "#f58518",
                          "#ffbf79",
                          "#54a24b",
                          "#88d27a",
                          "#b79a20",
                          "#f2cf5b",
                          "#439894",
                          "#83bcb6",
                          "#e45756",
                          "#ff9d98",
                          "#79706e",
                          "#bab0ac",
                          "#d67195",
                          "#fcbfd2",
                          "#b279a2",
                          "#d6a5c9",
                          "#9e765f",
                          "#d8b5a5"
                        ]
                      }
                },
                "opacity": {
                    "condition": {
                        "param": "cause",
                        "value": 1
                    },
                    "value": 0.2
                }
            },
            "params": [
                {
                    "name": "brush",
                    "select": {
                        "type": "interval",
                        "encodings": [
                            "x"
                        ]
                    }
                }
            ]
        }
    ],
    "config": {
        "axis": {
            "titleFont": "Open Sans",
            "labelFont": "Open Sans",
            "domain": false,
            "titleFontSize": 14
          },
        "title": {
            "font": "PT Serif",
            "fontSize": 24
        },
        "legend": {
            "titleFont": "Open Sans",
            "titleFontSize": 16,
            "labelFont": "Open Sans",
            "labelFontSize": 14
        }
    }
}